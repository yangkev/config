#********************** Key Bindings ***************************
set $mod Mod4
set $sup Mod1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
# bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec --no-startup-id alacritty

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
# bindsym $mod+d exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# split in [h]orizontal or [v]ertical orientation
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+t split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the [p]arent/[c]hild container
bindsym $mod+p focus parent
bindsym $mod+c focus child

# Init workspaces
set $w1     1
set $w2     2
set $w3     3
set $w4     4
set $w5     5
set $w6     6
set $w7     7
set $w8     8
set $w9     9
set $w10    10

# switch to workspace
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace $w9
bindsym $mod+0 workspace $w10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace $w6
bindsym $mod+Shift+7 move container to workspace $w7
bindsym $mod+Shift+8 move container to workspace $w8
bindsym $mod+Shift+9 move container to workspace $w9
bindsym $mod+Shift+0 move container to workspace $w10

# switch between current and previously focused workspaces
workspace_auto_back_and_forth yes
bindsym $sup+Tab workspace back_and_forth
bindsym $sup+Shift+Tab move container to workspace back_and_forth

# next/previous workspace
# bindsym $sup+Tab focus right
# bindsym $sup+Shift+Tab focus left

# reload/restart/exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode
    bindsym j resize shrink width 5 px or 5 ppt
    bindsym k resize grow height 5 px or 5 ppt
    bindsym l resize shrink height 5 px or 5 ppt
    bindsym semicolon resize grow width 5 px or 5 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

#**************************** Multi-Monitor *****************************

# Cycle through outputs
bindsym $mod+Tab focus output right

# Move the whole workspace to the next output
bindsym $mod+Shift+x move workspace to output down
bindsym $mod+x move container to output down

set $Display ~/config/bin/displays.sh
set $mode_display External Display [x] kill | [e] extend | [d] duplicate
mode "$mode_display" {
    # Extend (external monitor right of primary)
    # bindsym e

    # Duplicate (external monitor duplicate of primary)
    # Kill all external displays
    bindsym x exec --no-startup-id $Display -x, mode "default"
    bindsym e exec --no-startup-id $Display -e, mode "default"
    bindsym d exec --no-startup-id $Display -d, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+m mode $mode_display

#**************************** Workspaces *****************************


#*************************** i3-gaps  ****************************

gaps inner 10
gaps outer 10
smart_gaps on

#**************************** Appearance *****************************

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango: Terminus 9

hide_edge_borders both

# No title bars with gaps
for_window [class="^.*"] border pixel 0

#**************************** Other *****************************

# Correctly handle floating dialogs
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [title="Preferences$"] floating enable

# Get rid of mouse cursor warping when switching outpus
mouse_warping none

#*************************** System State Management ****************************
set $Locker ~/config/bin/lock.sh

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    # Use xss-lock to manage suspend hooked lock
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker -h, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Use mod+Shift+[Escape/~/`]
bindsym $mod+Shift+grave mode "$mode_system"

#*************************** Power Saving Management ****************************
set $Suspender ~/config/bin/suspension.sh

set $mode_power Power (e) enable auto-suspend, screensaver (d) disable auto-suspend, screensaver
mode "$mode_power" {
    bindsym e exec --no-startup-id $Suspender, mode "default"
    bindsym d exec --no-startup-id $Suspender -o, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Use Alt+Shift+[Escape/~/` key]
bindsym $sup+Shift+grave mode "$mode_power"


#*************************** Sound ****************************
# increase sound volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +10%
# decrease sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -10%
# mute sound
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

#*************************** App Settings ****************************

# Natural Scrolling
exec_always --no-startup-id xmodmap ~/.Xmodmap

# Wallpaper
exec_always --no-startup-id feh --bg-fill ~/Pictures/wallpapers/current

# Key press repeat rate
exec_always --no-startup-id xset r rate 300 30

# Switch caps and Escape
exec_always --no-startup-id setxkbmap -option caps:escape

# Set scroll direction
exec_always --no-startup-id synclient HorizEdgeScroll=1 VertEdgeScroll=1 VertScrollDelta=111

# Polybar
exec_always --no-startup-id ~/config/polybar/.config/polybar/launch.sh

# Set screensaver, suspend, display power management settings
exec_always --no-startup-id $Suspender

# Dropbox
exec --no-startup-id dropbox start

# Redshift
exec --no-startup-id redshift

# screenshotting
set $Scrot ~/config/bin/scrot.sh
bindsym --release $mod+Shift+s exec --no-startup-id "$Scrot"
