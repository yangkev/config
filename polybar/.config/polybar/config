[module/date]
type = internal/date
format = <label>
interval = 1.0
date = %b %d
time = %l:%M %p
date-alt = %a %b %d,%Y 
time-alt = %l:%M %p

label =  %date%   %time%

[module/i3]
type = internal/i3

format = <label-state><label-mode>
