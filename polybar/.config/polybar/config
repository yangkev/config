[colors]
background = ${xrdb:color0:#222}
foreground = ${self.white}
red = ${xrdb:color1}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
blue = ${xrdb:color4}
magenta = ${xrdb:color5}
cyan = ${xrdb:color6}
white = #fcfcfc

[bar/master]
monitor = ${env:MONITOR}
monitor-fallback = 
width = 100%
height = 22
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Inconsolata for Powerline:size=10:antialias=false;0"
font-1 = "Font Awesome 5 Free:pixelsize=8;-1"
font-2 = "Font Awesome 5 Free Solid:pixelsize=8;-1"

[bar/top]
inherit = bar/master
modules-left = i3
modules-center = xwindow
modules-right = network volume date

underline-size = 3
module-margin = 1
padding-right = 1

tray-position = right
tray-detached = false
tray-maxsize = 36
tray-padding = 1

wm-restack = i3 
enable-ipc = true

; MODULES

[module/xwindow]
type = internal/xwindow
format-padding = 4
label = %title%
label-maxlen = 50

[module/date]
type = internal/date
format = <label>
interval = 1.0
date = %b %d
time = %l:%M %p
date-alt = %a %b %d,%Y 
time-alt = %l:%M %p

label =  %date%   %time%

[module/i3]
type = internal/i3

format = <label-state><label-mode>
index-sort = true
enable-click = true
enable-scroll = false

; Only show workspaces defined on the same output as the bar
pin-workspaces = true

label-mode = %mode%
label-mode-padding = k
label-mode-background = ${colors.magenta}

label-focused = %name%
;label-focused-background = ${colors.blue}
label-focused-underline = ${colors.blue}
label-focused-foreground = ${colors.white}
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-padding = 2

label-visible = %name%
label-visible-underline = ${colors.magenta}
label-visible-padding = 2

label-urgent = %name%
label-urgent-background = ${colors.red}
label-urgent-padding = 2

